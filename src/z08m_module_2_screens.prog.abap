MODULE user_command_9001 INPUT.
  CASE sy-ucomm.
    WHEN 'BACK'.
      LEAVE PROGRAM.
    WHEN 'CANCEL'.
      LEAVE PROGRAM.
    WHEN 'NEXT'.
       CALL SCREEN 9002.
  ENDCASE.

ENDMODULE.
